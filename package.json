{
  "name": "jrxml-viewer",
  "displayName": "JRXML Viewer & Editor",
  "description": "Professional visual preview and interactive editor for JasperReports JRXML files. View report structure, inspect elements, export to HTML, and navigate your reports with ease.",
  "version": "0.1.7",
  "publisher": "YamidCuetoMazo",
  "icon": "report.png",
  "author": {
    "name": "Yamid Cueto Mazo",
    "email": "yamidcuetomazo@hotmail.com"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "jrxml",
    "jasperreports",
    "jasper",
    "report",
    "viewer",
    "editor",
    "java",
    "xml",
    "preview",
    "visual editor"
  ],
  "activationEvents": [
    "onCustomEditor:jrxml-viewer.editor",
    "onView:jrxmlFiles"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jrxml-explorer",
          "title": "JRXML Viewer",
          "icon": "$(file-code)"
        }
      ]
    },
    "views": {
      "jrxml-explorer": [
        {
          "id": "jrxmlFiles",
          "name": "JRXML Files",
          "icon": "media/jrxml-icon.svg",
          "contextualTitle": "JRXML Explorer"
        },
        {
          "id": "jrxmlProperties",
          "name": "Properties",
          "icon": "media/jrxml-icon.svg",
          "contextualTitle": "Document Properties"
        },
        {
          "id": "jrxmlElements",
          "name": "Elements",
          "icon": "media/jrxml-icon.svg",
          "contextualTitle": "Element Navigator"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "jrxml-viewer.editor",
        "displayName": "JRXML Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.jrxml"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "jrxml",
        "aliases": [
          "JRXML",
          "JasperReports XML"
        ],
        "extensions": [
          ".jrxml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jrxml",
        "scopeName": "text.xml.jrxml",
        "path": "./syntaxes/jrxml.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "jrxml-viewer.openPreview",
        "title": "Open JRXML Preview",
        "category": "JRXML"
      },
      {
        "command": "jrxmlFiles.refresh",
        "title": "Refresh JRXML Files",
        "category": "JRXML",
        "icon": "$(refresh)"
      },
      {
        "command": "jrxmlFiles.openFile",
        "title": "Open JRXML File",
        "category": "JRXML"
      },
      {
        "command": "jrxmlElements.revealElement",
        "title": "Reveal Element in Editor",
        "category": "JRXML"
      },
      {
        "command": "jrxml-viewer.openSource",
        "title": "Open JRXML Source",
        "category": "JRXML",
        "icon": "$(code)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jrxmlFiles.refresh",
          "when": "view == jrxmlFiles",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "jrxml-viewer.openSource",
          "when": "activeCustomEditorId == jrxml-viewer.editor",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "jrxml-viewer.openSource",
          "when": "resourceExtname == .jrxml",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.x",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YamiCueto/jrxml-viewer-extension.git"
  },
  "bugs": {
    "url": "https://github.com/YamiCueto/jrxml-viewer-extension/issues"
  },
  "homepage": "https://github.com/YamiCueto/jrxml-viewer-extension#readme",
  "license": "MIT",
  "badges": [
    {
      "url": "https://img.shields.io/visual-studio-marketplace/v/yamid.jrxml-viewer",
      "href": "https://marketplace.visualstudio.com/items?itemName=yamid.jrxml-viewer",
      "description": "Version"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/i/yamid.jrxml-viewer",
      "href": "https://marketplace.visualstudio.com/items?itemName=yamid.jrxml-viewer",
      "description": "Installs"
    },
    {
      "url": "https://img.shields.io/visual-studio-marketplace/r/yamid.jrxml-viewer",
      "href": "https://marketplace.visualstudio.com/items?itemName=yamid.jrxml-viewer",
      "description": "Rating"
    }
  ],
  "qna": "marketplace"
}
